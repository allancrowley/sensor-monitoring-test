FROM maven:3.8.6-openjdk-18 AS build
WORKDIR /app
COPY ./pom.xml ./
COPY ./src ./src
RUN mvn clean install -DskipTests

FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=build /app/target/sensor-imitator-0.0.1-SNAPSHOT.jar app.jar

ENV SERVER_PORT=8081
ENV SENSORS_COUNT=1000
ENV SENSORS_MIN_TEMPERATURE=0
ENV SENSORS_MAX_TEMPERATURE=50
ENV SENSORS_MIN_DEVIATION_TEMPERATURE=-1000
ENV SENSORS_MAX_DEVIATION_TEMPERATURE=2000
ENV SENSORS_DEVIATION_INTERVAL=100
ENV SENSORS_SENDING_RATE=15000
ENV SENSORS_ENDPOINT_HOST=http://localhost
ENV SENSORS_ENDPOINT_PORT=8082
ENV SENSORS_ENDPOINT_PATH=sensors/data

ENTRYPOINT [ "java", "-jar", "app.jar" ]